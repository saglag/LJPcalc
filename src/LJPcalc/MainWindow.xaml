<Window x:Class="LJPcalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LJPcalc"
        mc:Ignorable="d"
        Title="LJPcalc" Height="400" Width="700">

    <Grid>
        <local:AboutControl Grid.Row="1" x:Name="aboutControl1" Visibility="Collapsed" MouseUp="aboutControl1_MouseUp"/>
        <local:MainControl Grid.Row="1" x:Name="mainControl1" Visibility="Visible" Padding="6" />
    </Grid>

</Window>
