<Window x:Class="LJPcalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LJPcalc"
        mc:Ignorable="d"
        Title="LJPcalc" 
        Height="400" 
        MinHeight="400"
        Width="800"
        MinWidth="800"
        >

    <Grid>
        <local:AboutControl Grid.Row="1" x:Name="aboutControl1" Visibility="Collapsed" MouseUp="AboutHide" Background="White"/>
        <local:MainControl Grid.Row="1" x:Name="ljpControl1" Visibility="Visible" Padding="6" />
    </Grid>

</Window>
