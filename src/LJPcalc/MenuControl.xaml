<UserControl x:Class="LJPcalc.MenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LJPcalc"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Menu Name="menu1" Grid.Row="0">

            <MenuItem Header="_File">
                <MenuItem Name="MenuItemExit" Header="_Exit"/>
            </MenuItem>

            <MenuItem Header="_Ion Table">
                <MenuItem Header="_View"/>
                <MenuItem Header="_Edit"/>
            </MenuItem>

            <MenuItem Header="_Ion List">
                <MenuItem Header="_Clear"/>
                <MenuItem Header="_Save"/>
                <MenuItem Header="_Load"/>
                <MenuItem Header="_Demo"/>
            </MenuItem>

            <MenuItem Header="_Help">
                <MenuItem Header="_Documentation"/>
                <MenuItem Header="_Source Code"/>
                <MenuItem Name="MenuItemAbout"/>
            </MenuItem>

        </Menu>
    </Grid>
</UserControl>
