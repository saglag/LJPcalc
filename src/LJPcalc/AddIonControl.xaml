<UserControl x:Class="LJPcalc.AddIonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LJPcalc"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="300
             ">

    <GroupBox Header="Add Ion">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <ListBox x:Name="ionTableListbox" Grid.Column="0"/>

            <StackPanel Grid.Column="1" Margin="6, 0, 0, 0">
                <Label Content="Name:" />
                <TextBox>NaH2PO4</TextBox>
                <Label Content="Charge:" />
                <TextBox>-2</TextBox>
                <Label Content="Conductivity:" />
                <TextBox>12.345</TextBox>
                <Label Content="Mu:" />
                <TextBox>12.345</TextBox>
                <Label Content="C0 (mM):" />
                <TextBox>12.345</TextBox>
                <Label Content="CL (mM):" />
                <TextBox>12.345</TextBox>
                <Button Content="Add »" Margin="0, 10, 0, 0"/>
            </StackPanel>

        </Grid>
    </GroupBox>

</UserControl>
