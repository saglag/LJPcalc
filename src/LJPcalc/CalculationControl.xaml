<UserControl x:Class="LJPcalc.CalculationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LJPcalc"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300">

    <Grid>
        <GroupBox Header="Calculation">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Label Name="ResultLabel" Content="LJP = 123.45 mV" FontSize="24" Grid.Row="0" />
                <TextBox Name="DetailText" Foreground="Gray" IsReadOnly="True" Grid.Row="1" Background="Transparent" BorderThickness="0" Padding="3, 0, 3, 0"/>
            </Grid>
        </GroupBox>
    </Grid>

</UserControl>
