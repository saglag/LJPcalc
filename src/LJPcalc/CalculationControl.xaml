<UserControl x:Class="LJPcalc.CalculationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LJPcalc"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300">
    
    <GroupBox Grid.Row="0" Header="Calculation">
        <StackPanel>
            <Label Name="ResultLabel" Content="LJP = 123.45 mV" FontSize="24" />
            <ScrollViewer HorizontalScrollBarVisibility="Auto">
                <TextBlock Name="DetailText" Foreground="Gray">
                    calculation details
                </TextBlock>
            </ScrollViewer>
        </StackPanel>
    </GroupBox>
    
</UserControl>
